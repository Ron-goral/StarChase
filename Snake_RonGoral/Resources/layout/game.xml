<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/sky"
    >
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btn_home"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/homelogo"
        />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/coin"
            android:id="@+id/imageView2"
            />
        <TextView
            android:text="0"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/tvscore"
            android:textColor="@android:color/white"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/heart"
            android:id="@+id/heart1"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/heart"
            android:id="@+id/heart2"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:background="@drawable/heart"
            android:id="@+id/heart3"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
         
    </LinearLayout>
    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#000000"
    android:id="@+id/frameLayout1"
    android:layout_marginTop="10dp"
    >
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="40dp">
        <ImageButton
        android:text="Button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnUp"
        android:layout_gravity="center"
        android:background="@drawable/uarrow" 
        
          />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linearLayout1"
        android:gravity="center">
        <ImageButton
        android:text="Button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnLeft"
        android:background="@drawable/larrow"
        />
        <ImageButton
        android:text="Button"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:id="@+id/btn7"  
        android:background="@color/mtrl_btn_transparent_bg_color"/>
        <ImageButton
        android:text="Button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnRight" 
        android:background="@drawable/rarrow"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:gravity="center">
        <ImageButton
        android:text="Button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnDown"
        android:background="@drawable/darrow"
            />

    </LinearLayout>
</LinearLayout>

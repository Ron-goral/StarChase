<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:layoutDirection="ltr"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         <ImageButton
            android:text="home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/btn_homeshop"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/homelogo"
        />
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/coin"
            android:id="@+id/imageView2"
            />
        <TextView
            android:text="0"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/tvcoinsshop"
            android:textColor="@android:color/white"/>
        <ImageView
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="20dp"
            
            android:id="@+id/imageView3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="99"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="33"
            android:weightSum="99">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="80dp"             
                    android:background="@drawable/swc1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"          
                    android:text="apply"
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy1"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="15"                   
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy2"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc3"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"             
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy3"
                    android:layout_marginTop="10dp"
                    android:text="25"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="33"
            android:weightSum="99">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc4"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="50"
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy4"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc5"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="75"
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy5"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc6"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"
                    />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="100"
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy6"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="33"
            android:weightSum="99">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc7"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="150" 
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy7"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc8"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="200" 
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy8"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:orientation="vertical">
                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"             
                    android:background="@drawable/swc9"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2.5dp"
                    />              
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="250" 
                    android:layout_gravity="center"
                    android:id="@+id/btn_buy9"
                    android:layout_marginTop="10dp"/>               
            </LinearLayout>
        </LinearLayout>

        



        
        
    </LinearLayout>
</LinearLayout>
